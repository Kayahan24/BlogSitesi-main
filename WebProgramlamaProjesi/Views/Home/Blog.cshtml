@model WebProgramlamaProjesi.Models.BlogYorum
@{
    ViewData["Title"] = "Blog";
}

<div class="col-md-8 content-main">
    <div class="content-grid">
        <div class="content-grid-info">
            @foreach (var item in Model.Deger1)
            {
                <div class="single-grid">
            <img src="@item.BlogImage" alt="" />
            <div class="post-info">
                <h4><a href="/Home/BlogDetay/@item.ID">@item.Baslik</a>  July 30, 2014 / 27 Comments</h4>
                <p>@item.Aciklama</p>                
            </div>
                    </div>
            }
        </div>        
    </div>
</div>
<div class="col-md-4 content-right">
    <div class="recent">
        <h3>SON BLOGLAR</h3>
        @foreach (var x in Model.Deger3)
        {
        <ul>
            <li><a href="/Home/BlogDetay/@x.ID">@x.Baslik</a></li>            
        </ul>
        }
    </div>
    
    <div class="clearfix"></div>
    <div class="clearfix"></div>
</div>
