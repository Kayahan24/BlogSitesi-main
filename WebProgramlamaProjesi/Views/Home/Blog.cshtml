@model WebProgramlamaProjesi.Models.BlogYorum
@{
    ViewData["Title"] = "Blog";
}
<h2 class="text-center" style="color:#12DC71">BLOGLAR</h2>
<div class="ml-2 pl-2">
    <div class="col-md-10 content-main mx-auto">
        <div class="content-grid">
            <div class="content-grid-info">
                @foreach (var item in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@item.BlogImage" alt="" />
                        <div class="post-info">
                            <h4><a href="/Home/BlogDetay/@item.ID">@item.Baslik</a></h4>
                            <p>@item.Aciklama</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-2 content-right">
        <div class="recent">

            @foreach (var x in Model.Deger3)
            {
                <ul>
                    <li><a href="/Home/BlogDetay/@x.ID">@x.Baslik</a></li>
                </ul>
            }
        </div>

        <div class="clearfix"></div>
        <div class="clearfix"></div>
    </div>
</div>
<div class="clearfix"></div>

