@model BlogSitesi.Models.BlogYorum
@{
    ViewData["Title"] = "Blog";
}
<h2 class="text-center" style="color:#12DC71">BLOGLAR</h2>
<div class="col-md-8 d-flex align-items-center">
    <div class="col-md-8 content-main">
        <div class="content-grid">
            <div class="content-grid-info ml-5">
                @foreach (var item in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@item.BlogImage" alt="" />
                        <div class="post-info">
                            <h4><a href="/Home/BlogDetay/@item.ID">@item.Baslik</a></h4>
                            <p>@item.Aciklama</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

 
</div>
<div class="clearfix"></div>

