@model WebProgramlamaProjesi.Models.BlogYorum
@{
    ViewData["Title"] = "BlogDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>   

</head>
<body>    
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    @foreach (var item in Model.Deger1)
                    {
                    <img src="@item.BlogImage" alt="" />
                    <h2>@item.Baslik</h2>
                    <p>
                        @item.Aciklama
                    </p>
                    }
                </div>
                @foreach (var x in Model.Deger2)
                {
                <ul class="comment-list">
                    <li>
                        <img src="images/avatar.png" class="img-responsive" alt="">
                        <div class="desc">
                            <p>@x.KullaniciAdi: @x.Yorum</p>
                        </div>
                        <div class="clearfix"></div>
                    </li>
                </ul>
                }
                <div class="content-form">
                    <h3>Yorum yapin</h3>
                    <form>
                        <input type="text" placeholder="Kullanici adi" required />
                        <input type="text" placeholder="Mail adresi" required />                        
                        <textarea placeholder="Yorum"></textarea>
                        <input type="submit" value="Gonder" />
                    </form>
                </div>
            </div>

            
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>

