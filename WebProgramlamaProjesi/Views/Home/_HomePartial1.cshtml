@using WebProgramlamaProjesi.Models
@model List<Blog>

    @foreach (var item in Model)
        @if (item.ID < 3)

            { 
            <div class="left">
                <div class="bot-left">
                    <img src="@item.BlogImage" alt="" />
                </div>
                <div class="left-text">
                    <h4>@item.Baslik</h4>
                    <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
                    <p><a href="/Home/BlogDetay/@item.ID"><span class="read">Devamini oku</span></a></p>
                </div>
            </div>
        
        }
        
   

